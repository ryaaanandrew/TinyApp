<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body style="font-size:20px; padding:50px;">
  <% include ./partials/header %>

  <a href="http://localhost:8080/urls/new" class='btn btn-primary'>shorten a URL</a>

  <ul>
    <% for (let i = 0; i < userURLs.length; i++) { %>
      <form action="/urls/<%= userURLs[i].short %>/delete" method="POST">
        <li> <%= userURLs[i].short %> - <%= userURLs[i].long %></li>
        <button class='btn btn-primary'>delete</button>
      </form>
      <a href='/urls/<%= userURLs[i].short %>'>EDIT</a>
    <% } %>
  </ul>
</body>
</html>
